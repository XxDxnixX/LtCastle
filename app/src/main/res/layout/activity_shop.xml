<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ShopActivity">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/hintergrund3"
        android:gravity="clip_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Homescreen" />

    <ImageView
        android:id="@+id/schwertimageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:visibility="visible"
        app:srcCompat="@drawable/schwertkaempfer"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textschwertkaempfer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/schwertimageview"
        android:layout_toRightOf="@+id/schwertimageview"
        android:text="Erhöhung der CPS um 0,3"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_anchor="@+id/button"
        app:layout_anchorGravity="start|bottom" />

    <TextView
        android:id="@+id/preisschwert"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/textschwertkaempfer"
        android:layout_toRightOf="@+id/textschwertkaempfer"
        android:text="100 $"
        android:textColor="#4B00FF"
        android:textSize="18sp"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/kaufbutton1"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginRight="-50dp"
        android:layout_toEndOf="@+id/preisschwert"
        android:layout_toRightOf="@+id/preisschwert"
        android:layout_weight="1"
        android:background="#BE3A3A3A"
        android:visibility="visible"
        app:srcCompat="@drawable/kauficon" />

<!-- _______________________________________________________________________________________________ -->

    <ImageView
        android:id="@+id/schildtraegerimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/schwertimageview"
        android:layout_alignStart="@+id/schwertimageview"
        android:layout_alignLeft="@+id/schwertimageview"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/schildtraeger" />

    <TextView
        android:id="@+id/textschildtraeger"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textschwertkaempfer"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/schildtraegerimage"
        android:layout_toRightOf="@+id/schildtraegerimage"
        android:layout_weight="1"
        android:text="Erhöhung der CPS um 0,1 " />

    <TextView
        android:id="@+id/preisschild"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/preisschwert"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textschildtraeger"
        android:layout_toRightOf="@+id/textschildtraeger"
        android:textColor="#4B00FF"
        android:textSize="18sp"
        android:layout_weight="1"
        android:text="10 $" />

    <ImageButton
        android:id="@+id/kaufbutton2"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kaufbutton1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/preisschild"
        android:layout_toRightOf="@+id/preisschild"
        android:layout_weight="1"
        android:background="#BE3A3A3A"
        android:visibility="visible"
        app:srcCompat="@drawable/kauficon" />

<!-- _______________________________________________________________________________________________ -->

    <ImageView
        android:id="@+id/bogenschuetzeimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/schildtraegerimage"
        android:layout_alignStart="@+id/schwertimageview"
        android:layout_alignLeft="@+id/schwertimageview"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/bogenschuetze" />

    <TextView
        android:id="@+id/textbogenschuetze"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textschildtraeger"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/bogenschuetzeimage"
        android:layout_toRightOf="@+id/bogenschuetzeimage"
        android:layout_weight="1"
        android:text="Erhöhung der CPS um 0,5 " />

    <TextView
        android:id="@+id/preisbogen"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/preisschild"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textbogenschuetze"
        android:layout_toRightOf="@+id/textbogenschuetze"
        android:textColor="#4B00FF"
        android:textSize="18sp"
        android:layout_weight="1"
        android:text="1 $" />

    <ImageButton
        android:id="@+id/kaufbutton3"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kaufbutton2"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/preisbogen"
        android:layout_toRightOf="@+id/preisbogen"
        android:layout_weight="1"
        android:background="#BE3A3A3A"
        android:visibility="visible"
        app:srcCompat="@drawable/kauficon" />

<!-- _______________________________________________________________________________________________ -->
    <ImageView
        android:id="@+id/axtkriegerimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bogenschuetzeimage"
        android:layout_alignStart="@+id/bogenschuetzeimage"
        android:layout_alignLeft="@+id/bogenschuetzeimage"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/axtkrieger" />

    <TextView
        android:id="@+id/textaxtkrieger"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textbogenschuetze"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/axtkriegerimage"
        android:layout_toRightOf="@+id/axtkriegerimage"
        android:layout_weight="1"
        android:text="Erhöhung der CPS um 1,5 " />

    <TextView
        android:id="@+id/preisaxt"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/preisbogen"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textaxtkrieger"
        android:layout_toRightOf="@+id/textaxtkrieger"
        android:textColor="#4B00FF"
        android:textSize="18sp"
        android:layout_weight="1"
        android:text="0,1 $" />

    <ImageButton
        android:id="@+id/kaufbutton4"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kaufbutton3"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/preisaxt"
        android:layout_toRightOf="@+id/preisaxt"
        android:layout_weight="1"
        android:background="#BE3A3A3A"
        android:visibility="visible"
        app:srcCompat="@drawable/kauficon" />
<!-- _______________________________________________________________________________________________ -->

    <ImageView
        android:id="@+id/streitkolbenkaempferimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/axtkriegerimage"
        android:layout_alignStart="@+id/axtkriegerimage"
        android:layout_alignLeft="@+id/axtkriegerimage"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/streitkolben" />

    <TextView
        android:id="@+id/textstreitkolbenkaempfer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textaxtkrieger"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/streitkolbenkaempferimage"
        android:layout_toRightOf="@+id/streitkolbenkaempferimage"
        android:layout_weight="1"
        android:text="Erhöhung der CPS um 5,0 " />

    <TextView
        android:id="@+id/preisstreitkolben"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/preisaxt"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textstreitkolbenkaempfer"
        android:layout_toRightOf="@+id/textstreitkolbenkaempfer"
        android:textColor="#4B00FF"
        android:textSize="18sp"
        android:layout_weight="1"
        android:text="0,01 $" />

    <ImageButton
        android:id="@+id/kaufbutton5"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@+id/kaufbutton4"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/preisstreitkolben"
        android:layout_toRightOf="@+id/preisstreitkolben"
        android:layout_weight="1"
        android:background="#BE3A3A3A"
        android:visibility="visible"
        app:srcCompat="@drawable/kauficon" />

<!-- __________________________LEVEL ANZEIGE____________________________________________________ -->

    <TextView
        android:id="@+id/leveltext"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/streitkolbenkaempferimage"
        android:layout_alignStart="@+id/streitkolbenkaempferimage"
        android:layout_alignLeft="@+id/streitkolbenkaempferimage"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        android:text="LEVEL:"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/schwertimageview1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/leveltext"
        android:layout_alignStart="@+id/leveltext"
        android:layout_alignLeft="@+id/leveltext"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/schwertkaempfer" />

    <ImageView
        android:id="@+id/schildtraegerimage1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/leveltext"
        android:layout_alignStart="@+id/schwertimageview1"
        android:layout_alignLeft="@+id/schwertimageview1"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/schildtraeger" />

    <ImageView
        android:id="@+id/bogenschuetzeimage1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/leveltext"
        android:layout_alignStart="@+id/schildtraegerimage1"
        android:layout_alignLeft="@+id/schildtraegerimage1"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/bogenschuetze" />

    <ImageView
        android:id="@+id/axtkriegerimage1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/leveltext"
        android:layout_alignStart="@+id/bogenschuetzeimage1"
        android:layout_alignLeft="@+id/bogenschuetzeimage1"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/axtkrieger" />

    <ImageView
        android:id="@+id/streitkolbenkaempferimage1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/leveltext"
        android:layout_alignStart="@+id/axtkriegerimage1"
        android:layout_alignLeft="@+id/axtkriegerimage1"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/streitkolben" />

    <TextView
    android:id="@+id/schwertlvl"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_below="@+id/schwertimageview1"
    android:layout_alignStart="@+id/schwertimageview1"
    android:layout_alignLeft="@+id/schwertimageview1"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:textStyle="bold"
    android:textColor="@android:color/background_light"
    android:textSize="25sp"
    android:gravity="center"
    android:layout_weight="1"
    android:text="0" />

    <TextView
        android:id="@+id/schildlvl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/schildtraegerimage1"
        android:layout_alignStart="@+id/schildtraegerimage1"
        android:layout_alignLeft="@+id/schildtraegerimage1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="0" />

    <TextView
    android:id="@+id/bogenlvl"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_below="@+id/bogenschuetzeimage1"
    android:layout_alignStart="@+id/bogenschuetzeimage1"
    android:layout_alignLeft="@+id/bogenschuetzeimage1"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:textStyle="bold"
    android:textColor="@android:color/background_light"
    android:textSize="25sp"
    android:gravity="center"
    android:layout_weight="1"
    android:text="0" />

    <TextView
        android:id="@+id/axtlvl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/axtkriegerimage1"
        android:layout_alignStart="@+id/axtkriegerimage1"
        android:layout_alignLeft="@+id/axtkriegerimage1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="0" />

    <TextView
        android:id="@+id/streitkolbenlvl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/streitkolbenkaempferimage1"
        android:layout_alignStart="@+id/streitkolbenkaempferimage1"
        android:layout_alignLeft="@+id/streitkolbenkaempferimage1"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="0" />

    <ImageView
        android:id="@+id/goldanzeige1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/LinearLayout01"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@+id/elixirtext"
        android:layout_toRightOf="@+id/elixirtext"
        android:layout_weight="1"
        app:srcCompat="@drawable/gold" />

    <ImageView
        android:id="@+id/elixiranzeige1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/LinearLayout01"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/elexir" />

    <TextView
        android:id="@+id/goldtext"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/LinearLayout01"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_toEndOf="@+id/goldanzeige1"
        android:layout_toRightOf="@+id/goldanzeige1"
        android:layout_weight="1"
        android:text="" />

    <TextView
        android:id="@+id/elixirtext"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/LinearLayout01"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_toEndOf="@+id/elixiranzeige1"
        android:layout_toRightOf="@+id/elixiranzeige1"
        android:layout_weight="1"
        android:text="0" />
</RelativeLayout>



